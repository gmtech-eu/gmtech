---
import BaseLayout from '@layout/BaseLayout.astro';
import type { Thing, WithContext } from 'schema-dts';
import aboutHeroData from '@data/aboutHero.json';
import aboutExpertiseData from '@data/aboutExpertise.json';
import aboutPartnersData from '@data/aboutPartners.json';

const aboutData = aboutHeroData;
const expertiseData = aboutExpertiseData;

// SEO metadata for the page
const seo = {
  title: 'Group - GMTEC',
  description:
    'GMTEC Group - Your specialized partner for automotive business development in Europe. Transform fixed costs into variable costs with our experienced sales force.',
};

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  inLanguage: 'en-US',
  '@id': Astro.url.href,
  url: Astro.url.href,
  name: 'Group - GMTEC',
  description:
    "Learn about GMTEC Group's approach to automotive business development and why outsourcing your sales force can transform your business.",
  isPartOf: {
    '@type': 'WebSite',
    url: `${Astro.site}`,
    name: 'GMTEC',
    description: 'GMTEC Group is a consulting company providing expertise in the Automotive sector since 2003.',
  },
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pt-48 pb-12 sm:px-6 lg:px-8">
    <div class="max-w-7xl">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1 class="text-4xl text-balance text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl">
          {aboutData.title}
        </h1>
        <p class="mt-8 text-lg font-medium text-pretty text-slate-700 sm:text-xl/8">
          {aboutData.description}
        </p>
      </div>

      {/* Statistics Section */}
      <div class="mx-auto mt-10 max-w-2xl lg:mx-0 lg:max-w-none">
        <dl class="mt-16 grid grid-cols-1 gap-8 sm:mt-20 sm:grid-cols-2 lg:grid-cols-4">
          {
            aboutData.statistics.map((stat) => (
              <div class="flex flex-col-reverse gap-1">
                <dt class="text-base/7 text-slate-700">{stat.label}</dt>
                <dd class="text-4xl font-semibold tracking-tight text-slate-800">{stat.value}</dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </section>

  {/* Expertise Section */}
  <section class="mx-auto max-w-[85rem] px-4 py-24 sm:px-6 lg:px-8 lg:py-32">
    <div class="group relative isolate overflow-hidden rounded-3xl bg-teal-200 p-5 sm:p-11">
      <div
        class="group to-off-white pointer-events-none absolute inset-0 -top-[10%] h-[120%] w-full rounded-xl bg-linear-to-r/oklch from-teal-200 opacity-0 transition duration-1000 group-hover:opacity-100"
      >
      </div>
      <div class="svgBlock mx-auto max-w-7xl">
        <h2 class="relative pl-4 text-2xl font-semibold text-balance text-slate-800 md:text-3xl md:leading-tight">
          {expertiseData.title}
        </h2>
        <dl
          class="relative mt-10 grid max-w-xl grid-cols-1 items-start text-base/7 text-slate-600 sm:max-w-none lg:grid-flow-row-dense lg:auto-rows-fr lg:grid-cols-3"
        >
          {
            expertiseData.expertise.map((item, index) => (
              <div
                class={`px-5 py-5 sm:px-10 lg:py-0 ${index === 1 ? 'h-full border-y border-dashed border-slate-400 lg:border-x lg:border-y-0' : ''}`}
              >
                <dt class="text-lg font-semibold text-balance text-slate-600">{item.title}</dt>
                <dd class="mt-2 text-pretty text-slate-500">{item.description}</dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </section>

  {/* Partners Section */}
  <section class="mx-auto max-w-[85rem] px-4 pb-24 sm:px-6 lg:px-8 lg:pb-32">
    <div class="mx-auto max-w-2xl text-center lg:mb-14">
      <h2 class="text-2xl font-semibold text-balance text-slate-800 md:text-3xl md:leading-tight">{aboutPartnersData.title}</h2>
      <p class="mt-1 text-pretty text-slate-600">
        {aboutPartnersData.firstParagraph}
      </p>
      <p class="mt-4 text-pretty text-slate-600">
        {aboutPartnersData.secondParagraph}
      </p>
    </div>
  </section>

  <style>
    .svgBlock::after {
      content: '';
      position: absolute;
      inset: 0;
      background-image: url(/guilloche.svg);
      background-repeat: repeat;
      background-position: right top;
      background-size: 20px, 20px;
      opacity: 0.075;
      background-clip: padding-box;
      mask-image: linear-gradient(270deg, rgb(0, 0, 0), rgba(0, 0, 0, 0));
      pointer-events: none;
    }
  </style>
</BaseLayout>
