---
import BaseLayout from '@layout/BaseLayout.astro';
import Icon from '@ui/icons/Icon.astro';
import type { Thing, WithContext } from 'schema-dts';

// Import CMS data
import contactHeroData from '@data/contactHero.json';
import contactOfficesData from '@data/contactOffices.json';
import contactLinkedInData from '@data/contactLinkedIn.json';

// Generate avatar URLs for each office
const contacts = contactOfficesData.offices.map((office) => ({
  ...office,
  avatarUrl: `https://ui-avatars.com/api/?name=${encodeURIComponent(office.office)}&background=${office.avatarBackground}&color=fff&size=200`
}));

const { title, subtitle } = contactHeroData;

// SEO metadata for the page
const seo = {
  title: 'Contact - GMTEC',
  description:
    'Contact GMTEC Group for automotive consulting services. Reach our experts in France and Italy for business development support.',
};

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  inLanguage: 'en-US',
  '@id': Astro.url.href,
  url: Astro.url.href,
  name: 'Contact GMTEC',
  description:
    'Contact GMTEC Group for automotive consulting and business development services. Our teams in France and Italy are ready to support your projects.',
  isPartOf: {
    '@type': 'WebSite',
    url: `${Astro.site}`,
    name: 'GMTEC',
    description: 'GMTEC Group is a consulting company providing expertise in the Automotive sector since 2003.',
  },
};
---

<BaseLayout seo={seo} schema={schema}>
  <div class="mx-auto max-w-[85rem] px-4 pt-48 pb-28 sm:px-6 lg:px-8">
    <div class="mb-10 max-w-3xl lg:mb-14">
      <h2 class="text-4xl text-balance text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl">
        {title}
      </h2>
      <p class="mt-1 ml-1 text-slate-600">{subtitle}</p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:gap-12">
      {
        contacts.map((contact) => (
          <div class="group relative rounded-3xl bg-linear-to-br/oklch from-teal-100 via-transparent to-white p-8 ring-1 ring-slate-200 transition-all duration-300 hover:shadow-xl">
            <div class="flex items-start gap-6">
              {/* Avatar */}
              <img
                src={contact.avatarUrl}
                alt={contact.office}
                class="size-20 shrink-0 rounded-full shadow-lg ring-4 ring-white"
              />

              {/* Contact Details */}
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-slate-800">{contact.office}</h3>

                <div class="mt-4 space-y-2">
                  <div class="flex items-start gap-2 text-sm text-slate-600">
                    <Icon name="location" class="mt-0.5 size-4 shrink-0" />
                    <span>{contact.address}</span>
                  </div>
                </div>

                {/* CTA Button */}
                <a
                  href={`mailto:${contact.email}?subject=Business Development Inquiry`}
                  class="mt-6 inline-flex items-center rounded-xl bg-teal-600 px-4 py-2 text-sm font-medium text-white shadow-sm transition-all duration-150 hover:bg-teal-700 focus:bg-teal-700 focus:outline-hidden"
                >
                  Send an email
                  <Icon name="chevronRight" class="ml-2 size-4" />
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    {/* LinkedIn Section */}
    <div class="mt-16">
      <div class="rounded-3xl bg-teal-200 p-8 text-center sm:p-12">
        <Icon name="linkedin" class="mx-auto size-12 text-teal-700" />
        <h3 class="mt-4 text-2xl font-semibold text-slate-800">{contactLinkedInData.title}</h3>
        <p class="mt-2 text-slate-700">
          {contactLinkedInData.description}
        </p>
        <a
          href={contactLinkedInData.linkedInUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="mt-6 inline-flex items-center rounded-xl bg-teal-600 px-6 py-3 text-base font-medium text-white shadow-sm transition-all duration-150 hover:bg-teal-700 focus:bg-teal-700 focus:outline-hidden"
        >
          {contactLinkedInData.buttonText}
          <Icon name="externalLink" class="ml-2 size-5" />
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
