---
import ContactInfo from '@common/ContactInfo.astro';
import footerData from '@data/footer.json';

// Dynamic date for copyright display
const copyrightYear = new Date().getFullYear();

// Destructure data from CMS
const { companyInfo, quickLinks, contactInfo, copyright } = footerData;
---

<footer class="mt-auto w-full bg-linear-to-t/oklch from-teal-200 via-transparent to-white pb-10">
  <div class="mx-auto mt-auto w-full max-w-[85rem] px-4 pb-10 sm:px-6 lg:px-8">
    <hr class="mb-10 border-slate-200" />

    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      {/* Company Information */}
      <div class="md:col-span-1">
        <a
          href="/"
          class="flex-none text-xl font-semibold text-slate-700 uppercase focus:opacity-80 focus:outline-hidden"
          aria-label={`${companyInfo.name} Homepage`}
        >
          {companyInfo.name}
        </a>
        <p class="mt-4 text-pretty text-slate-600">
          {companyInfo.description}
        </p>
      </div>

      {/* Quick Links */}
      <div class="md:col-span-1">
        <h3 class="font-semibold text-slate-700">{quickLinks.title}</h3>
        <ul class="mt-3 space-y-2 text-sm text-slate-600">
          {
            quickLinks.links.map((link) => (
              <li>
                <a href={link.href} class="transition-colors duration-300 hover:text-slate-500">
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Contact Information Section */}
      <div class="md:col-span-1">
        <ContactInfo companyName={companyInfo.name} {...contactInfo} />
      </div>
    </div>

    {/* Divider before footer's bottom section */}
    <hr class="mt-10 mb-5 border-slate-200" />

    <div class="grid gap-y-2 sm:flex sm:items-center sm:justify-center sm:gap-y-0">
      {/* Copyright and Crafted By Section */}
      <p class="text-sm text-slate-400/50">
        &copy; {copyrightYear}
        {copyright.companyName}
      </p>
    </div>
  </div>
</footer>
