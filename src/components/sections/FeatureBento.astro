---
import { Image } from 'astro:assets';

import image_3 from '@images/agile_response.webp';
import image_4 from '@images/beyond_sales_support.webp';
import image_1 from '@images/cultural_bridge_2.webp';
import image_2 from '@images/program_management_2.webp';

// Content for the section title and subtitle
const title = `Our mission`;
const subTitle = `We offer tailor-made Business Development support in the Automotive OE (Original Equipment) sector, adapting ourselves to the needs of our partners.`;

const features = [
  {
    id: 'local-expertise',
    title: 'Local Expertise',
    description:
      'Deep market knowledge in France, Italy, Benelux and Spain with on-the-ground presence and cultural understanding',
    image: image_1,
    layout: 'horizontal',
  },
  {
    id: 'project-management',
    title: 'Complete Project Management',
    description: `From project award to <span class="font-bold">SOP</span> (Start of Production), we provide comprehensive program management throughout the development phase and series production.`,
    image: image_2,
    layout: 'vertical',
  },
  {
    id: 'agile-response',
    title: 'Agile Response',
    description:
      'We intervene effectively in the event of engineering modifications, technical obstacles, quality or logistics issues. Our lean structure ensures rapid adaptation.',
    image: image_3,
    layout: 'vertical',
  },
  {
    id: 'beyond-sales',
    title: 'Beyond Sales Support',
    listItems: [
      'Recruitment assistance for technical profiles and resident engineers',
      'Network facilitation for industrial partnerships and joint ventures',
    ],
    image: image_4,
    layout: 'horizontal',
  },
];
---

<div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20">
  {/* Section container for the title and subtitle */}
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2 class="text-2xl font-semibold text-balance text-slate-800 md:text-3xl md:leading-tight">
      <Fragment set:html={title} />
    </h2>
    <p class="mt-1 text-pretty text-slate-600">
      <Fragment set:html={subTitle} />
    </p>
  </div>

  <div class="mx-auto max-w-6xl space-y-8">
    {/* 1. Local Expertise - Horizontal */}
    <div class="group relative">
      <div
        class="rounded-2xl bg-white p-8 shadow-sm ring-1 ring-slate-200 transition-all duration-300 hover:shadow-lg hover:ring-slate-300"
      >
        <div class="grid gap-8 lg:grid-cols-2 lg:items-center">
          <div>
            <h3 class="mb-4 text-xl font-semibold text-slate-800">
              {features[0].title}
            </h3>
            <p class="leading-relaxed text-slate-600" set:html={features[0].description} />
          </div>
          <div class="relative">
            <div class="overflow-hidden rounded-xl bg-gradient-to-br from-slate-50 to-teal-50 p-6">
              <Image
                class="w-full rounded-lg object-contain shadow-md"
                src={features[0].image}
                alt={`Illustration for ${features[0].title}`}
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* 2. Project Management + Agile Response - En colonnes */}
    <div class="grid gap-8 lg:grid-cols-2">
      {
        features.slice(1, 3).map((feature) => (
          <div class="group relative">
            <div class="h-full rounded-2xl bg-white p-8 shadow-sm ring-1 ring-slate-200 transition-all duration-300 hover:shadow-lg hover:ring-slate-300">
              <div class="flex h-full flex-col">
                <div class="mb-6">
                  <h3 class="mb-3 text-xl font-semibold text-slate-800">{feature.title}</h3>
                  <p class="leading-relaxed text-slate-600" set:html={feature.description} />
                </div>

                <div class="mt-auto">
                  <div class="overflow-hidden rounded-xl bg-gradient-to-br from-slate-50 to-teal-50 p-4">
                    <Image
                      class="w-full rounded-lg object-contain shadow-md"
                      src={feature.image}
                      alt={`Illustration for ${feature.title}`}
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    {/* 3. Beyond Sales Support - Horizontal */}
    <div class="group relative">
      <div
        class="rounded-2xl bg-white p-8 shadow-sm ring-1 ring-slate-200 transition-all duration-300 hover:shadow-lg hover:ring-slate-300"
      >
        <div class="grid gap-8 lg:grid-cols-2 lg:items-center">
          <div>
            <h3 class="mb-4 text-xl font-semibold text-slate-800">
              {features[3].title}
            </h3>

            {
              features[3].listItems && (
                <ul class="space-y-3">
                  {features[3].listItems.map((item) => (
                    <li class="flex items-start text-slate-600">
                      <span class="mt-2 mr-3 h-1.5 w-1.5 flex-shrink-0 rounded-full bg-teal-500" />
                      <span set:html={item} />
                    </li>
                  ))}
                </ul>
              )
            }
          </div>

          <div class="relative">
            <div class="overflow-hidden rounded-xl bg-gradient-to-br from-slate-50 to-teal-50 p-6">
              <Image
                class="w-full rounded-lg object-contain shadow-md"
                src={features[3].image}
                alt={`Illustration for ${features[3].title}`}
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
