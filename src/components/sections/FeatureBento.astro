---
import featureBentoData from '@data/featureBento.json';
import { getImage } from 'astro:assets';

const { title, subtitle, localExpertise, projectManagement, agileResponse, beyondSales } = featureBentoData;

const images = import.meta.glob('/src/assets/**/*.{png,jpg,jpeg,gif,webp,avif}', {
  eager: true,
  import: 'default',
});

function resolveImage(imagePath: string): ImageMetadata | null {
  if (!imagePath) return null;

  const fullPath = imagePath.replace('@assets', '/src/assets');
  return (images[fullPath] as ImageMetadata) ?? null;
}

const sections = [localExpertise, projectManagement, agileResponse, beyondSales];
const features = await Promise.all(
  sections.map(async (section, index) => {
    const keystaticImageSrc = section.image?.src;

    let optimizedImageUrl = null;
    const keystaticImage = resolveImage(keystaticImageSrc ?? '');

    if (keystaticImage) {
      const optimized = await getImage({ src: keystaticImage, format: 'webp' });
      optimizedImageUrl = optimized.src;
    }

    return {
      id: ['local-expertise', 'project-management', 'agile-response', 'beyond-sales'][index],
      title: section.title,
      description: 'description' in section ? section.description : '',
      listItems: 'listItems' in section ? section.listItems : [],
      optimizedImageUrl,
      alt: section.image?.alt || '',
      layout: index === 1 || index === 2 ? 'vertical' : 'horizontal',
    };
  })
);
---

<div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20">
  {/* Section container for the title and subtitle */}
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2 class="text-2xl font-semibold text-balance text-slate-800 md:text-3xl md:leading-tight">
      <Fragment set:html={title} />
    </h2>
    <p class="mt-1 text-pretty text-slate-600">
      <Fragment set:html={subtitle} />
    </p>
  </div>

  <div class="mx-auto max-w-6xl space-y-8">
    {/* 1. Local Expertise - Horizontal */}
    <div class="group relative">
      <div
        class="rounded-2xl bg-white p-8 shadow-sm ring-1 ring-slate-200 transition-all duration-300 hover:shadow-lg hover:ring-slate-300"
      >
        <div class="grid gap-8 lg:grid-cols-2 lg:items-center">
          <div>
            <h3 class="mb-4 text-xl font-semibold text-slate-800">
              {features[0].title}
            </h3>
            <p class="leading-relaxed text-slate-600" set:html={features[0].description} />
          </div>
          <div class="relative">
            <div class="overflow-hidden rounded-xl bg-gradient-to-br from-slate-50 to-teal-50 p-6">
              {
                features[0].optimizedImageUrl && (
                  <img
                    class="w-full rounded-lg object-contain shadow-md"
                    src={features[0].optimizedImageUrl}
                    alt={features[0].alt}
                  />
                )
              }
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* 2. Project Management + Agile Response - En colonnes */}
    <div class="grid gap-8 lg:grid-cols-2">
      {
        features.slice(1, 3).map((feature) => (
          <div class="group relative">
            <div class="h-full rounded-2xl bg-white p-8 shadow-sm ring-1 ring-slate-200 transition-all duration-300 hover:shadow-lg hover:ring-slate-300">
              <div class="flex h-full flex-col">
                <div class="mb-6">
                  <h3 class="mb-3 text-xl font-semibold text-slate-800">{feature.title}</h3>
                  <p class="leading-relaxed text-slate-600" set:html={feature.description} />
                </div>

                <div class="mt-auto">
                  <div class="overflow-hidden rounded-xl bg-gradient-to-br from-slate-50 to-teal-50 p-4">
                    {feature.optimizedImageUrl && (
                      <img
                        class="w-full rounded-lg object-contain shadow-md"
                        src={feature.optimizedImageUrl}
                        alt={feature.alt}
                      />
                    )}
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    {/* 3. Beyond Sales Support - Horizontal */}
    <div class="group relative">
      <div
        class="rounded-2xl bg-white p-8 shadow-sm ring-1 ring-slate-200 transition-all duration-300 hover:shadow-lg hover:ring-slate-300"
      >
        <div class="grid gap-8 lg:grid-cols-2 lg:items-center">
          <div>
            <h3 class="mb-4 text-xl font-semibold text-slate-800">
              {features[3].title}
            </h3>

            {
              features[3].listItems && (
                <ul class="space-y-3">
                  {features[3].listItems.map((item: string) => (
                    <li class="flex items-start text-slate-600">
                      <span class="mt-2 mr-3 h-1.5 w-1.5 flex-shrink-0 rounded-full bg-teal-500" />
                      <span set:html={item} />
                    </li>
                  ))}
                </ul>
              )
            }
          </div>

          <div class="relative">
            <div class="overflow-hidden rounded-xl bg-gradient-to-br from-slate-50 to-teal-50 p-6">
              {
                features[3].optimizedImageUrl && (
                  <img
                    class="w-full rounded-lg object-contain shadow-md"
                    src={features[3].optimizedImageUrl}
                    alt={features[3].alt}
                  />
                )
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
