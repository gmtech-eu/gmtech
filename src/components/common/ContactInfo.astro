---
import Icon from '@ui/icons/Icon.astro';
const { companyName, title, address, email, linkedIn } = Astro.props;
---

<div>
  <h3 class="font-semibold text-slate-700">{title}</h3>
  <ul class="mt-3 space-y-2 text-sm text-slate-600">
    <li class="flex items-center gap-x-2">
      <Icon name="mapPin" />
      <span>{address}</span>
    </li>
    {email && (
      <li class="flex items-center gap-x-2">
        <Icon name="email" />
        <a href={`mailto:${email.address}`} class="transition-colors duration-300 hover:text-slate-500">{email.linkText}</a>
      </li>
    )}
    {linkedIn && (
      <li class="flex items-center gap-x-2">
        <Icon name="linkedin" />
        <a
          href={linkedIn.url}
          target="_blank"
          rel="noopener noreferrer"
          class="transition-colors duration-300 hover:text-slate-500">{linkedIn.linkText}</a
        >
      </li>
    )}
  </ul>
</div>
